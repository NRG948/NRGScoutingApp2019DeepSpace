<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="NRGScoutingApp.RankingsDetailView"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true" 
             ios:NavigationPage.PrefersLargeTitles="true">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Overall Score: 0" x:Name="overallScore" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" TextColor="Green" FontSize="30"/>
            <Grid HorizontalOptions="Center" VerticalOptions="Center" RowSpacing="5" ColumnSpacing="2" Margin="5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Text="Cargo Score: 0" x:Name="cargoScore" TextColor="Black" FontSize="18"
                       Grid.Row="0" Grid.Column="0"/>
                <Label Text="Hatch Score: 0" x:Name="hatchScore" TextColor="Black" FontSize="18"
                       Grid.Row="0" Grid.Column="1"/>
                <Label Text="Climb Score: 0" x:Name="cargoScore" TextColor="Black" FontSize= "18"
                       Grid.Row="0" Grid.Column="2"/>
                <Label Text="Lvl 1 Score: 0" x:Name="lvl1Score" TextColor="Black" FontSize="18"
                       Grid.Row="1" Grid.Column="0"/>
                <Label Text="Lvl 2 Score: 0" x:Name="lvl2Score" TextColor="Black" FontSize="18"
                       Grid.Row="1" Grid.Column="1"/>
                <Label Text="Lvl 3 Score: 0" x:Name="lvl3Score" TextColor="Black" FontSize="18"
                       Grid.Row="1" Grid.Column="2"/>

            </Grid>
            <ScrollView>
                <ListView x:Name="listView" Margin="0,0,0,0" ItemTapped="matchTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="0" Margin="0">
                                    <Label Text="{Binding matchNum}" x:Name="key" HorizontalTextAlignment="Start" Margin="0"/>
                                    <Label Text="{Binding teamNameAndSide}" x:Name="value" HorizontalTextAlignment="Start" Margin="0"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
